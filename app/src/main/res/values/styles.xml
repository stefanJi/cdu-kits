<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--修改actionbar-->
        <item name="actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <!--修改布局背景-->
        <item name="android:windowBackground">@color/window_bg</item>
    </style>


    <style name="myActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/myActionBarStyle_text</item>
        <item name="titleTextStyle">@style/myActionBarStyle_text</item>
    </style>

    <style name="myActionBarStyle_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_main_menu_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/s_main_menu_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_main_text_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/s_main_menu_text</item>
        <item name="android:drawableEnd">@mipmap/ic_right</item>
        <item name="android:drawableRight">@mipmap/ic_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
