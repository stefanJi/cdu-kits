<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s_main_menu_text"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_history_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="C#企业案例开发入门"
            android:textColor="@color/menu_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_getData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-09"
            android:textColor="@color/menu_text" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_endData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-10-10"
            android:textColor="@color/menu_text" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:drawableEnd="@mipmap/ic_right"
        android:drawablePadding="2dp"
        android:drawableRight="@mipmap/ic_right"
        android:gravity="center_vertical"
        android:text="查看图书信息"
        android:textSize="12sp" />
</LinearLayout>