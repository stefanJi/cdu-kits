<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="搜索图书馆"
            android:textColor="@color/menu_text"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio_dou_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索豆瓣图书"
            android:textColor="@color/menu_text"
            android:textSize="14sp" />

    </RadioGroup>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s_edittext_search"
        android:hint="输入书名搜索"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="16sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/search"
            android:textSize="14sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_search_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_text"
            android:textSize="14sp" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s_main_menu_text"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏:"
            android:textColor="@color/menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/ic_right"
            android:drawableRight="@mipmap/ic_right"
            android:textColor="@color/menu_text"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>