<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary">

        <ImageButton
            android:id="@+id/imgBtn_back"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_back_btn" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/imgBtn_search"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_search_btn" />
        </FrameLayout>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgBtn_back"
            android:layout_toLeftOf="@id/frame"
            android:layout_toRightOf="@id/imgBtn_back"
            android:layout_toStartOf="@id/frame"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search_info"
        style="@style/book_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/app_name" />

    <cn.youcute.library.diyView.LoadMoreListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#666"
        android:dividerHeight="2dp" />
</LinearLayout>